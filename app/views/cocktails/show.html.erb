<div class="container">
  <div>
    <h1><%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |dose| %>
      <div>
        <%= dose.ingredient.name %> <%= dose.description %>
        <%= link_to "delete", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %></li>
      <% end %>
  </div>

  <div>
    <%= link_to "back", cocktails_path, class: 'btn btn-danger' %>
    <%= link_to "Add Doses & ingredient", new_cocktail_dose_path(@cocktail), class: 'btn btn-success' %>
  </div>

  <div>
  </div>
</div>

